cmake_minimum_required(VERSION 3.24 FATAL_ERROR)

set(VODARCHIVER_VERSION "(unknown version)")

find_package(Git QUIET)
if (GIT_FOUND)
	execute_process(
		COMMAND ${GIT_EXECUTABLE} describe --dirty --tags --always
		WORKING_DIRECTORY "${CMAKE_CURRENT_SOURCE_DIR}/.."
		RESULT_VARIABLE TMP_VODARCHIVER_GIT_DESCRIBE_RESULT
		OUTPUT_VARIABLE TMP_VODARCHIVER_GIT_DESCRIBE_OUTPUT
		OUTPUT_STRIP_TRAILING_WHITESPACE
	)
	execute_process(
		COMMAND ${GIT_EXECUTABLE} rev-parse --abbrev-ref HEAD
		WORKING_DIRECTORY "${CMAKE_CURRENT_SOURCE_DIR}/.."
		RESULT_VARIABLE TMP_VODARCHIVER_GIT_REVPARSE_RESULT
		OUTPUT_VARIABLE TMP_VODARCHIVER_GIT_REVPARSE_OUTPUT
		OUTPUT_STRIP_TRAILING_WHITESPACE
	)
	if (${TMP_VODARCHIVER_GIT_DESCRIBE_RESULT} EQUAL 0 AND ${TMP_VODARCHIVER_GIT_REVPARSE_RESULT} EQUAL 0)
		if (${TMP_VODARCHIVER_GIT_REVPARSE_OUTPUT} STREQUAL "master")
			set(VODARCHIVER_VERSION "${TMP_VODARCHIVER_GIT_DESCRIBE_OUTPUT}")
		else()
			set(VODARCHIVER_VERSION "${TMP_VODARCHIVER_GIT_DESCRIBE_OUTPUT} (${TMP_VODARCHIVER_GIT_REVPARSE_OUTPUT})")
		endif()
	endif()
endif()

message(STATUS "Revision is ${VODARCHIVER_VERSION}")
file(WRITE "${CMAKE_BINARY_DIR}/vodarchiver_embeds/vodarchiver_version.h.tmp" "#pragma once\n#define VODARCHIVER_VERSION \"${VODARCHIVER_VERSION}\"")
execute_process(COMMAND ${CMAKE_COMMAND} -E copy_if_different "${CMAKE_BINARY_DIR}/vodarchiver_embeds/vodarchiver_version.h.tmp" "${CMAKE_BINARY_DIR}/vodarchiver_embeds/vodarchiver_version.h")
file(REMOVE ${SCMREV_HEADER_PATH}.tmp)
